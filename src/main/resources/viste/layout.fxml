                  <MenuItem fx:id="bottoneConcerti" mnemonicParsing="false" text="Concerti" />
                  <MenuItem fx:id="bottoneTuor" mnemonicParsing="false" text="Tour" />
                  <MenuItem fx:id="bottoneRecensioni" mnemonicParsing="false" text="Recensioni" />
                  <MenuItem fx:id="bottoneStrutture" mnemonicParsing="false" text="Strutture" />
               </items>
            </MenuButton>
            <ImageView fx:id="iconaDiRicerca" fitHeight="25.0" fitWidth="25.0" layoutX="383.0" layoutY="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/pngegg.png" />
               </image>
               <effect>
                  <Lighting specularConstant="2.0" specularExponent="0.0">
                     <bumpInput>

                  <Font name="Arial Black" size="22.0" />
               </font>
            </Text>
            <ImageView fx:id="bottoneProfilo" fitHeight="40.0" fitWidth="40.0" layoutX="540.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/profilo.png" />
               </image>
               <effect>
                  <Lighting specularConstant="2.0" specularExponent="0.0">
                     <bumpInput>
                        <Shadow />
                     </bumpInput>
                     <light>
                        <Light.Distant />
                     </light>
                  </Lighting>
               </effect>
            </ImageView>
         </children>
      </Pane>
   </top>
